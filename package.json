{
  "name": "nuxeo-website-styles",
  "description": "Styles to be used on Nuxeo websites",
  "private": true,
  "version": "4.4.16",
  "main": "",
  "config": {
    "browser": "chromium-browser"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "predev": "npm run npm_install",
    "dev": "npm run server & nodemon --exec 'npm run compile && browser-sync reload'",
    "server": "browser-sync start --server ./static --browser=$npm_package_config_browser",
    "postinstall": "npm run compile",
    "precompile": "bower install --allow-root",
    "compile": "npm run compile:elements & p1=$!; npm run compile:styles & p2=$!; wait \"$p1\" \"$p2\"",
    "postcompile": "rm -rf static/satellite/latest && mkdir -p static/satellite/latest && cp -r build/es5-bundled/* static/satellite/latest && cp -r css static/satellite/latest",
    "compile:elements": "polymer build",
    "precompile:styles": "rm -rf ./tmp ./css",
    "compile:styles": "node-sass --source-map true --source-map-contents --include-path ./scss/ --include-path ./SMAKK/sass/ --include-path ./node_modules/foundation-sites/scss/ --include-path ./node_modules/open-sans-fontface/sass --output-style compressed --output ./tmp/ ./scss/",
    "postcompile:styles": "postcss --use autoprefixer -c postcss.json -d css/ tmp/*.css",
    "precompile:styles-expanded": "npm run precompile:styles",
    "compile:styles-expanded": "node-sass --source-map true --source-comments --include-path ./scss/ --include-path ./SMAKK/sass/ --include-path ./node_modules/foundation-sites/scss/ --include-path ./node_modules/open-sans-fontface/sass --output-style expanded --output ./tmp/ ./scss/",
    "postcompile:styles-expanded": "npm run postcompile:styles",
    "npm_install": "[ `npm run -s package_checksum` = `cat package.md5` ] || npm install && npm run -s package_checksum > package.md5",
    "package_checksum": "openssl md5 package.json | grep -oE '[a-zA-Z0-9]+$'",
    "predeploy": "npm run npm_install",
    "deploy": "cp -r static/satellite/latest static/satellite/`node -e \"console.log(require('./package.json').version);\"`"
  },
  "author": "Andrew Goodricke <github@andrewgoodricke.com> (http://www.nuxeo.com)",
  "dependencies": {
    "autoprefixer": "^6.7.3",
    "bower": "^1.8.0",
    "foundation-sites": "6.4.2",
    "html-minifier": "^3.4.3",
    "node-sass": "^4.5.0",
    "open-sans-fontface": "^1.4.0",
    "polymer-cli": "^1.5.7",
    "postcss-cli": "^2.6.0",
    "sass-lint": "^1.10.2"
  },
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "eslint": "^3.13.1",
    "nodemon": "^1.12.1"
  },
  "license": "MIT",
  "repository": "git@github.com:nuxeo/website-styles.git",
  "bugs": {
    "url": "git@github.com:nuxeo/website-styles.git/issues"
  }
}
