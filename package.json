{
  "name": "nuxeo-website-styles",
  "description": "Styles to be used on Nuxeo websites",
  "private": true,
  "version": "0.1.3",
  "main": "",
  "config": {
    "browser": "chromium-browser"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run server & nodemon --exec 'npm run compile:styles && browser-sync reload'",
    "server": "browser-sync start --server . --startPath demo --browser=$npm_package_config_browser",
    "postinstall": "npm run compile",
    "precompile": "bower install",
    "compile": "npm run compile:header",
    "compile:header": "vulcanize -o elements/header.min.html elements/header/header.html --strip-comments --inline-scripts --inline-css",
    "precompile:styles": "rm -rf ./tmp ./css",
    "compile:styles": "node-sass --source-map true --source-map-contents --include-path ./scss/ --include-path ./node_modules/normalize-scss/sass/ --include-path ./node_modules/open-sans-fontface/sass --output-style compressed --output ./tmp/ ./scss/",
    "postcompile:styles": "postcss --use autoprefixer -c postcss.json -d css/ tmp/*.css"
  },
  "author": {
    "name": "Andrew Goodricke",
    "email": "github@andrewgoodricke.com",
    "url": "http://www.nuxeo.com"
  },
  "dependencies": {
    "bower": "^1.8.0",
    "normalize-scss": "^6.0.0",
    "open-sans-fontface": "^1.4.0",
    "vulcanize": "^1.15.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "browser-sync": "^2.18.8",
    "eslint": "^3.13.1",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^2.6.0",
    "sass-lint": "^1.10.2"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:nuxeo/website-styles.git"
  },
  "bugs": {
    "url": "git@github.com:nuxeo/website-styles.git/issues"
  }
}
