{
  "name": "nuxeo-website-styles",
  "description": "Styles to be used on Nuxeo websites",
  "private": true,
  "version": "8.4.11",
  "main": "",
  "config": {
    "browser": "chromium-browser"
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "test": "eslint --cache --fix .",
    "package_checksum": "openssl md5 package.json | grep -oE '[a-zA-Z0-9]+$'",
    "npm_install": "[ `npm run -s package_checksum` = `cat package.md5` ] || npm install && npm run -s package_checksum > package.md5",
    "start": "npm run build:components && npm run compile",
    "server": "browser-sync start --server ./static --startPath satellite/demo.html --browser=$npm_package_config_browser",
    "predev": "npm run npm_install",
    "dev": "npm run server & nodemon --exec 'npm run compile && browser-sync reload'",
    "build:components": "rollup -c",
    "dev:components": "npm run server:components & rollup -c -w",
    "server:components": "browser-sync start --server ./demo --watch ./demo",
    "compile": "npm run compile:styles",
    "postcompile": "cp -rv css/* static/components/v1",
    "precompile:styles": "rm -rf ./tmp ./css",
    "compile:styles": "sass --embed-sources --load-path node_modules/foundation-sites/scss/ --style=compressed components/style/:tmp/",
    "postcompile:styles": "postcss -m --use autoprefixer -c postcss.json -d css/ tmp/*.css",
    "precompile:legacy": "npm run precompile:styles",
    "compile:legacy": "sass --embed-sources --load-path node_modules/foundation-sites/scss/ --style compressed scss/:tmp/",
    "postcompile:legacy": "npm run postcompile:styles && cp -rv css static/satellite/latest",
    "precompile:legacy-expanded": "npm run precompile:styles",
    "compile:legacy-expanded": "sass --embed-sources --load-path node_modules/foundation-sites/scss/ --style expanded scss/:tmp/",
    "postcompile:legacy-expanded": "npm run postcompile:legacy",
    "xversion": "npm run npm_install && npm start && cp -r static/satellite/latest static/satellite/`node -e \"console.log(require('./package.json').version);\"` && git add static/satellite && git commit -m \"Satellite release `node -e \"console.log(require('./package.json').version);\"` added\"",
    "xpostversion": "git push && git push --tags",
    "login:server": "browser-sync start --server ./login --watch ./login",
    "login:dev": "npm run login:server & nodemon --ext scss --exec 'npm run login:styles && browser-sync reload'",
    "login:styles": "sass --embed-sources login/src/:login/",
    "postlogin:styles": "postcss login/*.css -mr",
    "register:server": "browser-sync start --server ./register --watch ./register",
    "register:dev": "npm run register:server & nodemon --ext scss --exec 'npm run register:styles && browser-sync reload'",
    "register:styles": "sass --embed-sources register/src/:register/",
    "postregister:styles": "postcss register/*.css -mr",
    "marketplace:dev": "nodemon --ext scss --exec 'npm run marketplace:styles'",
    "marketplace:styles": "sass --embed-sources --load-path node_modules/foundation-sites/scss/ marketplace/scss/:nos-marketplace-css",
    "postmarketplace:styles": "postcss nos-marketplace-css/marketplace-*.css --use autoprefixer -mr"
  },
  "author": "Andrew Goodricke <github@andrewgoodricke.com> (http://www.nuxeo.com)",
  "dependencies": {
    "foundation-sites": "6.6.3",
    "postcss": "^8.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "autoprefixer": "^10.2.6",
    "browser-sync": "^2.26.13",
    "cssnano": "^5.0.4",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "html-minifier": "^4.0.0",
    "nodemon": "^2.0.6",
    "postcss-cli": "^8.2.0",
    "prettier": "^2.3.0",
    "rollup": "^2.50.3",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.2",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "svelte": "^3.49.0",
    "svelte-preprocess": "^4.7.3"
  },
  "license": "MIT",
  "repository": "git@github.com:nuxeo/website-styles.git",
  "bugs": {
    "url": "git@github.com:nuxeo/website-styles.git/issues"
  }
}
